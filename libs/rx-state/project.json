{
  "root": "libs/rx-state",
  "sourceRoot": "libs/rx-state/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/rx-state",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "tsConfig": "libs/rx-state/tsconfig.lib.json",
        "project": "libs/rx-state/package.json",
        "entryFile": "libs/rx-state/src/index.ts",
        "external": ["tslib"],
        "assets": [
          {
            "glob": "libs/rx-state/README.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "LICENSE",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/rx-state/**/*.{ts,tsx,js,jsx}"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/rx-state"],
      "options": {
        "jestConfig": "libs/rx-state/jest.config.js",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "postTargets": ["rx-state:publish", "rx-state:github"],
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]"
      }
    },
    "publish": {
      "executor": "@ns3/nx-npm:publish"
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  },
  "tags": []
}
