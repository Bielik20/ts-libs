{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@ns3/di": ["libs/di/src/index.ts"],
      "@ns3/fetch-client": ["libs/fetch-client/src/index.ts"],
      "@ns3/react-utils": ["libs/react-utils/src/index.ts"],
      "@ns3/rx-actions": ["libs/rx-actions/src/index.ts"],
      "@ns3/rx-devtools": ["libs/rx-devtools/src/index.ts"],
      "@ns3/rx-state": ["libs/rx-state/src/index.ts"],
      "@ns3/ts-utils": ["libs/ts-utils/src/index.ts"],
      "@ns3/workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
